{
    "version": 2,
    "functions": {
        "news_aggregator/wsgi.py": {
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "news_aggregator/wsgi.py"
        }
    ],
    "env": {
        "DEBUG": "False",
        "ALLOWED_HOSTS": ".vercel.app,localhost,127.0.0.1"
    },
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}