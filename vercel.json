{
    "version": 2,
    "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 30
        }
    },
    "env": {
        "DEBUG": "False",
        "ALLOWED_HOSTS": ".vercel.app,localhost,127.0.0.1"
    }
}